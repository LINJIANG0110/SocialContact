<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chat_room_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mChatRoomLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/magin_2"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/magin_2"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/magin_5">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mHeadImg"
                    android:layout_width="@dimen/magin_30"
                    android:layout_height="@dimen/magin_30"
                    app:actualImageScaleType="focusCrop"
                    app:failureImage="@mipmap/wxdl_chushi"
                    app:failureImageScaleType="centerCrop"
                    app:placeholderImage="@mipmap/wxdl_chushi"
                    app:placeholderImageScaleType="centerCrop"
                    app:progressBarAutoRotateInterval="3000"
                    app:progressBarImage="@drawable/progressbar"
                    app:progressBarImageScaleType="centerInside"
                    app:roundAsCircle="true"
                    app:roundedCornerRadius="@dimen/magin_2" />
                <!--app:fadeDuration="3000"-->
                <!--app:roundAsCircle="true"-->
                <!--app:roundingBorderColor="#C3B0A9"-->
                <!--app:roundingBorderWidth="2dp" />-->
                <ImageView
                    android:id="@+id/userRole"
                    android:layout_width="@dimen/magin_12"
                    android:layout_height="@dimen/magin_12"
                    android:layout_gravity="right"
                    android:layout_marginLeft="-8dp"
                    android:src="@mipmap/manager" />

                <TextView
                    android:id="@+id/mUserLevel"
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/blue_round_bg"
                    android:gravity="center"
                    android:maxLength="2"
                    android:text="99"
                    android:textColor="@color/white"
                    android:textSize="6sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/addressTv"
                style="@style/style_text_style_pingfang_changgui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/magin_2"
                android:maxLength="2"
                android:text="发生点发生点"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/littleTextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/magin_5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/userOfficial"
                    android:layout_width="@dimen/magin_12"
                    android:layout_height="@dimen/magin_12"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/official"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/nickNameTv"
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="水电费水电费是"
                    android:textColor="@color/chat_color_nv"
                    android:textSize="@dimen/littleTextSize" />

                <ImageView
                    android:id="@+id/mLogoImg"
                    android:layout_width="@dimen/magin_80"
                    android:layout_height="@dimen/magin_20"
                    android:layout_marginRight="@dimen/margin_10"
                    android:src="@mipmap/rich_rank_logo" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_type7root"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/magin_30"
                android:layout_marginTop="@dimen/magin_5"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="200dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/item_redpackage" />

                    <TextView
                        android:id="@+id/tv_idiom"
                        style="@style/style_text_style_pingfang_changgui"
                        android:layout_width="150dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="65dp"
                        android:text="密密麻麻"
                        android:textColor="@color/huangjin"
                        android:textSize="24sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_word"
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/llay_yuanjiaobeijing_hui"
                    android:gravity="center"
                    android:text="接龙红包：接龙拼音zhu"
                    android:textColor="@color/tv_black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_type0root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/magin_30"
                android:layout_marginTop="@dimen/magin_5"
                android:background="@drawable/chat_room_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" @梦逍遥"
                    android:textColor="@color/chat_color_nv"
                    android:textSize="@dimen/middleTextSize"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text"
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水电费水电费水电费是水水电费是水电费水电费水电费是"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middleTextSize" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mChatRoomLL_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/magin_2"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/magin_2"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/magin_5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mLogoImg_"
                    android:layout_width="@dimen/magin_80"
                    android:layout_height="@dimen/magin_20"
                    android:src="@mipmap/rich_rank_logo" />

                <TextView
                    android:id="@+id/nickNameTv_"
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水电费水电费是"
                    android:textColor="@color/chat_color_nv"
                    android:textSize="@dimen/littleTextSize" />

                <ImageView
                    android:id="@+id/userOfficial_"
                    android:layout_width="@dimen/magin_12"
                    android:layout_height="@dimen/magin_12"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/official"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_type7root_"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/magin_30"
                android:layout_marginTop="@dimen/magin_5"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="200dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/item_redpackage" />

                    <TextView
                        android:id="@+id/tv_idiom_"
                        android:layout_width="150dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        style="@style/style_text_style_pingfang_changgui"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="65dp"
                        android:text="密密麻麻"
                        android:textColor="@color/huangjin"
                        android:textSize="24sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_word_"
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/llay_yuanjiaobeijing_hui"
                    android:gravity="center"
                    android:text="接龙红包：接龙拼音zhu"
                    android:textColor="@color/tv_black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_type0root_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/magin_30"
                android:layout_marginTop="@dimen/magin_5"
                android:background="@drawable/ease_chatto_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" @梦逍遥"
                    android:textColor="@color/chat_color_nv"
                    android:textSize="@dimen/middleTextSize"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_"
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水电费水电费水电费是水水电费是水电费水电费水电费是"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middleTextSize" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/magin_5">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mHeadImg_"
                    android:layout_width="@dimen/magin_30"
                    android:layout_height="@dimen/magin_30"
                    app:actualImageScaleType="focusCrop"
                    app:failureImage="@mipmap/wxdl_chushi"
                    app:failureImageScaleType="centerCrop"
                    app:placeholderImage="@mipmap/wxdl_chushi"
                    app:placeholderImageScaleType="centerCrop"
                    app:progressBarAutoRotateInterval="3000"
                    app:progressBarImage="@drawable/progressbar"
                    app:progressBarImageScaleType="centerInside"
                    app:roundAsCircle="true"
                    app:roundedCornerRadius="@dimen/magin_2" />
                <!--app:fadeDuration="3000"-->
                <!--app:roundAsCircle="true"-->
                <!--app:roundingBorderColor="#C3B0A9"-->
                <!--app:roundingBorderWidth="2dp" />-->
                <ImageView
                    android:id="@+id/userRole_"
                    android:layout_width="@dimen/magin_12"
                    android:layout_height="@dimen/magin_12"
                    android:layout_gravity="right"
                    android:layout_marginLeft="-8dp"
                    android:src="@mipmap/manager" />

                <TextView
                    android:id="@+id/mUserLevel_"
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/blue_round_bg"
                    android:gravity="center"
                    android:maxLength="2"
                    android:text="99"
                    android:textColor="@color/white"
                    android:textSize="6sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/addressTv_"
                style="@style/style_text_style_pingfang_changgui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/magin_2"
                android:maxLength="2"
                android:text="发生点发生点"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/littleTextSize" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/style_text_style_pingfang_changgui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/magin_5"
        android:layout_marginTop="@dimen/magin_5"
        android:text="萌小妖已成为管理员"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/smallTextSize"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_redpackage"
            android:visibility="gone"
            android:layout_width="12dp"
            android:layout_height="14dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/item_redpackage_small" />

        <TextView
            android:id="@+id/mStatusTv"
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/magin_5"
            android:layout_marginTop="@dimen/magin_5"
            android:text="萌小妖已成为管理员"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/smallTextSize" />
    </LinearLayout>
</LinearLayout>
