<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/magin_280"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_little_cornor_little_gray"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mGuardLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_20"
            android:src="@drawable/guard_success" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mGuardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="镖车被救回来啦！"
            android:textColor="@color/text_black"
            android:textSize="@dimen/smallTextSize" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mGuardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_20"
            android:lineSpacingExtra="@dimen/magin_3"
            android:text="老实交代分离式的解放路第三方老实交代分离式的解放路第三方老实交代分离式的解放路第三方老实交代分离式的解放路第三方"
            android:textColor="@color/text_black"
            android:textSize="@dimen/smallTextSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_1"
            android:layout_margin="@dimen/margin_10"
            android:background="@color/little_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mEnsureTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="确认"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middleTextSize" />

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mOperateTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="升级技能"
                android:textColor="@color/app_color"
                android:textSize="@dimen/middleTextSize" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>