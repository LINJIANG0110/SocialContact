<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/adapter_select"
    android:orientation="vertical"
    android:padding="@dimen/magin_5">

    <FrameLayout
        android:layout_width="@dimen/magin_80"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mHeadImg"
            android:layout_width="@dimen/magin_80"
            android:layout_height="@dimen/magin_80"
            app:actualImageScaleType="focusCrop"
            app:failureImage="@mipmap/huoqutupianmoshi"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="@mipmap/huoqutupianmoshi"
            app:placeholderImageScaleType="centerCrop"
            app:progressBarAutoRotateInterval="3000"
            app:progressBarImage="@drawable/progressbar"
            app:progressBarImageScaleType="centerInside"
            app:roundedCornerRadius="@dimen/magin_5" />
        <!--app:fadeDuration="3000"-->
        <!--app:roundAsCircle="true"-->
        <!--app:roundingBorderColor="#C3B0A9"-->
        <!--app:roundingBorderWidth="2dp" />-->

        <FrameLayout
            android:layout_width="@dimen/magin_80"
            android:layout_height="@dimen/magin_15"
            android:layout_gravity="left|bottom"
            android:background="@mipmap/liaotianshi_hui1"
            android:paddingBottom="@dimen/magin_2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mGifLogo"
                    android:layout_width="@dimen/margin_10"
                    android:layout_height="@dimen/margin_10"
                    android:layout_margin="@dimen/magin_3"
                    android:visibility="gone"
                    app:actualImageScaleType="focusCrop"
                    app:failureImage="@mipmap/huoqutupianmoshi"
                    app:failureImageScaleType="centerCrop"
                    app:placeholderImage="@mipmap/huoqutupianmoshi"
                    app:placeholderImageScaleType="centerCrop"
                    app:progressBarAutoRotateInterval="3000"
                    app:progressBarImage="@drawable/progressbar"
                    app:progressBarImageScaleType="centerInside" />
                <!--app:roundedCornerRadius="5dp" />-->
                <!--app:fadeDuration="3000"-->
                <!--app:roundAsCircle="true"-->
                <!--app:roundingBorderColor="#C3B0A9"-->
                <!--app:roundingBorderWidth="2dp" />-->
                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:id="@+id/mNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/magin_2"
                    android:layout_marginTop="@dimen/magin_2"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tightTextSize" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/mMoneyFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/margin_10">

            <ImageView
                android:layout_width="@dimen/magin_30"
                android:layout_height="@dimen/magin_12"
                android:scaleType="fitXY"
                android:src="@drawable/money_bg" />

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mMoneyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLength="5"
                android:text="￥9999"
                android:textColor="@color/white"
                android:textSize="@dimen/tightTextSize" />
        </FrameLayout>
    </FrameLayout>

    <TextView
        style="@style/style_text_style_pingfang_changgui"
        android:id="@+id/mContentTv"
        android:layout_width="@dimen/magin_80"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/magin_2"
        android:layout_marginTop="@dimen/magin_2"
        android:text="水电费第三方士大夫水电费第三方士大夫"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="@dimen/littleTextSize" />
</LinearLayout>