<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/backFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/magin_20"
            android:paddingTop="@dimen/margin_10">

            <ImageView
                android:layout_width="@dimen/magin_15"
                android:layout_height="@dimen/magin_15"
                android:layout_centerVertical="true"
                android:src="@drawable/all_back" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/msgTabTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_cornor_left2"
                android:paddingBottom="@dimen/magin_5"
                android:paddingLeft="@dimen/magin_20"
                android:paddingRight="@dimen/magin_20"
                android:paddingTop="@dimen/magin_5"
                android:text="@string/earnIn"
                android:textColor="@color/white" />

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/friendTabTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_cornor_right1"
                android:paddingBottom="@dimen/magin_5"
                android:paddingLeft="@dimen/magin_20"
                android:paddingRight="@dimen/magin_20"
                android:paddingTop="@dimen/magin_5"
                android:text="@string/costOut"
                android:textColor="@color/app_color" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_0.1"
        android:background="@color/little_line_color" />

    <FrameLayout
        android:id="@+id/homeFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>