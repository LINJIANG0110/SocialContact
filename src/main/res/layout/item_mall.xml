<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="@dimen/margin_10"
    android:paddingLeft="@dimen/magin_8"
    android:paddingRight="@dimen/magin_1"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_cornor_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/magin_5"
       >

        <TextView
            android:id="@+id/goodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月亮礼包"
            android:textColor="@color/text_black"
            android:textSize="@dimen/smallTextSize" />

        <ImageView
            android:id="@+id/goodImg"
            android:layout_width="@dimen/magin_40"
            android:layout_height="@dimen/magin_40"
            android:layout_marginTop="@dimen/magin_5"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/goodDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_cornor_red"
            android:paddingLeft="@dimen/magin_5"
            android:paddingRight="@dimen/magin_5"
            android:layout_marginTop="-8dp"
            android:text="1.6折"
            android:textColor="@color/white"
            android:textSize="@dimen/tightTextSize" />

        <TextView
            android:id="@+id/goodDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="使用获得金星x120，金币x2344"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/littleTextSize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/costLogo"
                android:layout_width="@dimen/magin_15"
                android:layout_height="@dimen/magin_15"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/costMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_2"
                android:text="3455"
                android:textColor="@color/oval_purple"
                android:textSize="@dimen/smallTextSize" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/cheapLogo"
        android:layout_width="@dimen/magin_20"
        android:layout_height="@dimen/magin_20"
        android:layout_gravity="right|top"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="-10dp"
        android:src="@mipmap/ic_launcher"/>
</LinearLayout>
