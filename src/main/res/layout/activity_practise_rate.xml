<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_head_view" />

    <TextView
        style="@style/style_text_style_pingfang_changgui"
        android:id="@+id/mDoubleLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/magin_30"
        android:text="购买使用道具“双倍升级”"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/smallTextSize" />

    <TextView
        style="@style/style_text_style_pingfang_changgui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/magin_2"
        android:text="升级技能时获得双倍熟练度，24小时内有效"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/smallTextSize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/magin_30"
        android:background="@color/little_gray" />

    <ImageView
        android:layout_width="@dimen/magin_60"
        android:layout_height="@dimen/magin_60"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/magin_30"
        android:src="@mipmap/doublelevel" />

    <TextView
        style="@style/style_text_style_pingfang_changgui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/magin_5"
        android:text="双倍升级"
        android:textColor="@color/oval_purple"
        android:textSize="@dimen/smallTextSize" />

    <android.support.v7.widget.CardView
        android:id="@+id/mGoBuyCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_30"
        android:descendantFocusability="blocksDescendants"
        app:cardCornerRadius="4dp"
        android:layout_gravity="center"
        app:cardElevation="2dp">

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/app_color_selector"
            android:gravity="center"
            android:paddingTop="@dimen/magin_6"
            android:paddingBottom="@dimen/magin_6"
            android:paddingLeft="@dimen/magin_40"
            android:paddingRight="@dimen/magin_40"
            android:text="去购买"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size" />
    </android.support.v7.widget.CardView>
</LinearLayout>