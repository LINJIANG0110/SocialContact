<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_head_view" />

    <TextView
        style="@style/style_text_style_pingfang_changgui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_80"
        android:layout_marginLeft="@dimen/magin_15"
        android:textSize="@dimen/smallTextSize"
        android:textColor="@color/app_color"
        android:layout_marginRight="@dimen/magin_15"
        android:text="友情提示：请正确填写提现资料，因资料不正确导致提现失败或其他情况，千语概不负责。" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/little_gray"
        android:layout_marginTop="@dimen/magin_20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_15"
            android:text="姓名        "
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />

        <EditText
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@null"
            android:hint="与提现微信的姓名一致"
            android:padding="@dimen/magin_15"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/smallTextSize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_0.1"
        android:background="@color/little_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/little_gray"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_15"
            android:text="身份证号"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />

        <EditText
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mIdNumEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@null"
            android:hint="与提现微信的身份证一致"
            android:padding="@dimen/magin_15"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/smallTextSize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_0.1"
        android:visibility="gone"
        android:background="@color/little_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/little_gray"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_15"
            android:text="提现账号"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />

        <EditText
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mAccountEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@null"
            android:hint="已绑定的微信账号"
            android:padding="@dimen/magin_15"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/smallTextSize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_0.1"
        android:background="@color/little_gray" />

    <android.support.v7.widget.CardView
        android:id="@+id/ensureCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/magin_15"
        android:layout_marginRight="@dimen/magin_15"
        android:layout_marginTop="@dimen/magin_80"
        android:descendantFocusability="blocksDescendants"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/app_color_selector"
            android:gravity="center"
            android:padding="@dimen/magin_8"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size" />
    </android.support.v7.widget.CardView>

</LinearLayout>