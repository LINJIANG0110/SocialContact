<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="直播结束"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />

        <FrameLayout
            android:id="@+id/mFinishLogo"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/magin_20"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="@dimen/magin_5"
            android:paddingBottom="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/magin_12"
                android:layout_height="@dimen/magin_12"
                android:src="@mipmap/zhibojieshu_guanbi" />
        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mHeadImg"
            android:layout_width="@dimen/magin_80"
            android:layout_height="@dimen/magin_80"
            android:layout_marginTop="@dimen/magin_20"
            app:actualImageScaleType="focusCrop"
            app:failureImage="@mipmap/wxdl_chushi"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="@mipmap/wxdl_chushi"
            app:placeholderImageScaleType="centerCrop"
            app:progressBarAutoRotateInterval="3000"
            app:progressBarImage="@drawable/progressbar"
            app:progressBarImageScaleType="centerInside"
            app:roundAsCircle="true"
            app:roundedCornerRadius="@dimen/magin_5" />
        <!--app:fadeDuration="3000"-->
        <!--app:roundAsCircle="true"-->
        <!--app:roundingBorderColor="#C3B0A9"-->
        <!--app:roundingBorderWidth="2dp" />-->
        <TextView
            android:id="@+id/mFamilyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_5"
            android:textColor="@color/app_color"
            android:textSize="@dimen/middleTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_50"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直播时长"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/smallTextSize" />

                <TextView
                    android:id="@+id/mLiveTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/largeTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计收听"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/smallTextSize" />

                <TextView
                    android:id="@+id/mTotalPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/largeTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收入葫芦"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/smallTextSize" />

                <TextView
                    android:id="@+id/mTotalIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/largeTextSize" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/mProductionEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_20"
            android:layout_marginRight="@dimen/magin_20"
            android:layout_marginTop="@dimen/magin_20"
            android:background="@color/little_gray"
            android:padding="@dimen/margin_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑信息"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middleTextSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/magin_5"
                    android:text="编辑我的作品信息"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/smallTextSize" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/magin_15"
                android:layout_height="@dimen/magin_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/wo_jiantouyou" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/mSureTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/magin_20"
        android:layout_marginLeft="@dimen/magin_20"
        android:layout_marginRight="@dimen/magin_20"
        android:layout_marginTop="@dimen/magin_20"
        android:background="@drawable/app_color_selector"
        android:gravity="center"
        android:padding="@dimen/magin_8"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/largeTextSize" />
</LinearLayout>