<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/magin_50"
        android:background="@drawable/shape_cornor_white"
        android:orientation="vertical">

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_half_cornor_app_corlor"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="选择充值数量"
            android:textColor="@color/white"
            android:textSize="@dimen/middleTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/adapter_select"
            android:orientation="horizontal"
            android:padding="@dimen/magin_15">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/mHeadImg"
                android:layout_width="@dimen/magin_40"
                android:layout_height="@dimen/magin_40"
                app:actualImageScaleType="focusCrop"
                app:failureImage="@mipmap/fang_zhengtouxiang"
                app:failureImageScaleType="centerCrop"
                app:placeholderImage="@mipmap/fang_zhengtouxiang"
                app:placeholderImageScaleType="centerCrop"
                app:progressBarAutoRotateInterval="3000"
                app:progressBarImage="@drawable/progressbar"
                app:progressBarImageScaleType="centerInside"
                app:roundedCornerRadius="@dimen/magin_4"
                app:roundingBorderWidth="4dp" />
            <!--app:roundAsCircle="true"-->
            <!--app:roundingBorderColor="#C3B0A9"-->
            <!--app:fadeDuration="3000"-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mUserName"
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="斯蒂芬斯蒂芬"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/smallTextSize" />

                <TextView
                    android:id="@+id/mIdNum"
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/magin_5"
                    android:singleLine="true"
                    android:text="ID:12312"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/littleTextSize" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/shape_solid_little_gray_"
            android:orientation="vertical"
            android:padding="@dimen/magin_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/magin_20"
                        android:layout_height="@dimen/magin_20"
                        android:src="@mipmap/coin1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/magin_5"
                        android:background="@drawable/shape_little_cornor_little_gray"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mCoinReduce"
                            android:layout_width="@dimen/magin_20"
                            android:layout_height="@dimen/magin_20"
                            android:src="@mipmap/reduce" />

                        <EditText
                            android:id="@+id/mCoinET"
                            style="@style/style_text_style_pingfang_changgui"
                            android:layout_width="@dimen/magin_35"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="5"
                            android:text="1"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/smallTextSize" />


                        <ImageView
                            android:id="@+id/mCoinAdd"
                            android:layout_width="@dimen/magin_20"
                            android:layout_height="@dimen/magin_20"
                            android:src="@mipmap/add" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/magin_5"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/magin_20"
                        android:layout_height="@dimen/magin_20"
                        android:src="@mipmap/wallet1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/magin_5"
                        android:background="@drawable/shape_little_cornor_little_gray"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mFuBaoReduce"
                            android:layout_width="@dimen/magin_20"
                            android:layout_height="@dimen/magin_20"
                            android:src="@mipmap/reduce" />

                        <EditText
                            android:id="@+id/mFuBaoET"
                            style="@style/style_text_style_pingfang_changgui"
                            android:layout_width="@dimen/magin_35"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="5"
                            android:text="1"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/smallTextSize" />


                        <ImageView
                            android:id="@+id/mFuBaoAdd"
                            android:layout_width="@dimen/magin_20"
                            android:layout_height="@dimen/magin_20"
                            android:src="@mipmap/add" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/magin_30"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/magin_20"
                    android:layout_height="@dimen/magin_20"
                    android:src="@mipmap/diamond1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/magin_5"
                    android:background="@drawable/shape_little_cornor_little_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mDiamondReduce"
                        android:layout_width="@dimen/magin_20"
                        android:layout_height="@dimen/magin_20"
                        android:src="@mipmap/reduce" />

                    <EditText
                        android:id="@+id/mDiamondET"
                        style="@style/style_text_style_pingfang_changgui"
                        android:layout_width="@dimen/magin_35"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="5"
                        android:text="1"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/smallTextSize" />


                    <ImageView
                        android:id="@+id/mDiamondAdd"
                        android:layout_width="@dimen/magin_20"
                        android:layout_height="@dimen/magin_20"
                        android:src="@mipmap/add" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mCancelTv"
                style="@style/style_text_style_pingfang_changgui"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="取消"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middleTextSize_" />


            <TextView
                android:id="@+id/mSureTv"
                style="@style/style_text_style_pingfang_changgui"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="充值"
                android:textColor="@color/app_color"
                android:textSize="@dimen/middleTextSize_" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>