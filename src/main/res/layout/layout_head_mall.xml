<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingLeft="@dimen/magin_15"
        android:paddingRight="@dimen/magin_15"
        android:paddingTop="@dimen/magin_1"
        android:paddingBottom="@dimen/magin_1"
        android:background="@drawable/shape_cornor_white"
        android:orientation="horizontal">
        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/littleTextSize"
            android:textColor="@color/text_black"
            android:text="余额:"/>
        <ImageView
            android:layout_width="@dimen/margin_10"
            android:layout_height="@dimen/margin_10"
            android:layout_marginLeft="@dimen/magin_2"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_2"
            android:textSize="@dimen/littleTextSize"
            android:textColor="@color/text_black"
            android:text="10"/>
        <ImageView
            android:layout_width="@dimen/margin_10"
            android:layout_height="@dimen/margin_10"
            android:layout_marginLeft="@dimen/magin_2"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>
</LinearLayout>