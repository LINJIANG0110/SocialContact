<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/magin_15">

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mCancelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/middleTextSize" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mSureTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="确定"
            android:textColor="@color/app_color"
            android:textSize="@dimen/middleTextSize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/little_gray"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/magin_15">

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mStartTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始日期"
            android:textColor="@color/app_color"
            android:textSize="@dimen/smallTextSize" />

        <View
            android:layout_width="@dimen/magin_20"
            android:layout_height="@dimen/magin_1"
            android:layout_marginLeft="@dimen/magin_80"
            android:layout_marginRight="@dimen/magin_80"
            android:background="@color/text_gray" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mEndTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束日期"
            android:textColor="@color/text_black"
            android:textSize="@dimen/smallTextSize" />
    </LinearLayout>

    <net.neiquan.applibrary.numberpicker.view.DatePicker
        android:id="@+id/mTimePicker"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content" />
</LinearLayout>