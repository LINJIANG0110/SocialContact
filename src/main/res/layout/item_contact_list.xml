<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        style="@style/style_text_style_pingfang_changgui"
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="#7FFFFFFf"
        android:paddingBottom="2dip"
        android:paddingLeft="20dip"
        android:paddingTop="2dip"
        android:text="A"
        android:textColor="#000000"
        android:textSize="@dimen/middleTextSize" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/adapter_select"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="16"
            android:layout_marginLeft="@dimen/margin_10"
            android:singleLine="true"
            android:text="普罗旺斯"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mAddTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_cornor_blue"
            android:gravity="center"
            android:layout_marginRight="@dimen/magin_20"
            android:paddingBottom="@dimen/magin_3"
            android:paddingLeft="@dimen/magin_15"
            android:paddingRight="@dimen/magin_15"
            android:paddingTop="@dimen/magin_3"
            android:text="添加"
            android:textColor="@color/white"
            android:textSize="@dimen/smallTextSize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/little_gray" />
</LinearLayout>