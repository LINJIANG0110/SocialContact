<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_head_view" />

    <EditText
        style="@style/style_text_style_pingfang_changgui"
        android:id="@+id/mQuestTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/magin_20"
        android:layout_marginRight="@dimen/magin_20"
        android:layout_marginTop="@dimen/magin_20"
        android:background="@null"
        android:hint="问题是什么"
        android:maxLines="2"
        android:textColor="@color/text_black"
        android:textSize="@dimen/middleTextSize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_0.1"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/magin_20"
        android:layout_marginRight="@dimen/magin_20"
        android:background="@color/little_gray" />

    <EditText
        style="@style/style_text_style_pingfang_changgui"
        android:id="@+id/mQuestContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_200"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/magin_20"
        android:layout_marginRight="@dimen/magin_20"
        android:background="@null"
        android:gravity="top"
        android:hint="是否有对问题的进一步详细描述"
        android:maxLength="200"
        android:textColorHint="@color/text_gray"
        android:textSize="@dimen/smallTextSize" />

    <TextView
        style="@style/style_text_style_pingfang_changgui"
        android:id="@+id/mQuestNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_10"
        android:text="0/200"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/smallTextSize" />
</LinearLayout>