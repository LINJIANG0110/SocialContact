<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/little_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_view" />

    <com.qianyu.communicate.views.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_1"
                android:background="@color/little_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/magin_20">

                <ImageView
                    android:id="@+id/familyPhoto"
                    android:layout_width="@dimen/magin_60"
                    android:layout_height="@dimen/magin_60"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="点击上传家族头像"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middleTextSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_5"
                android:background="@color/little_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/magin_20"
                android:paddingRight="@dimen/magin_20">

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家族名称"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middleTextSize" />

                <EditText
                    style="@style/style_text_style_pingfang_changgui"
                    android:id="@+id/familyName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/magin_20"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="北京是一家人"
                    android:paddingBottom="@dimen/magin_15"
                    android:paddingTop="@dimen/magin_15"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/smallTextSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/magin_20"
                android:paddingRight="@dimen/magin_20">

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢迎词"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middleTextSize" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/style_text_style_pingfang_changgui"
                        android:id="@+id/familyWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="点击编辑"
                        android:paddingBottom="@dimen/magin_15"
                        android:paddingTop="@dimen/magin_5"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/smallTextSize" />

                    <ImageView
                        android:id="@+id/familyWelcomeLogo"
                        android:layout_width="@dimen/magin_15"
                        android:layout_height="@dimen/magin_15"
                        android:layout_marginLeft="@dimen/magin_5"
                        android:layout_marginBottom="@dimen/magin_5"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/magin_20"
                android:paddingRight="@dimen/magin_20">

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家族介绍"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middleTextSize" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/style_text_style_pingfang_changgui"
                        android:id="@+id/familyDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="点击编辑"
                        android:paddingBottom="@dimen/magin_15"
                        android:paddingTop="@dimen/magin_5"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/smallTextSize" />

                    <ImageView
                        android:id="@+id/familyDetailLogo"
                        android:layout_width="@dimen/magin_15"
                        android:layout_height="@dimen/magin_15"
                        android:layout_marginLeft="@dimen/magin_5"
                        android:layout_marginBottom="@dimen/magin_5"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </com.qianyu.communicate.views.BounceScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/submitEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/magin_30"
        android:layout_marginRight="@dimen/magin_30"
        android:layout_marginTop="@dimen/margin_10"
        android:descendantFocusability="blocksDescendants"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/app_color_selector"
            android:gravity="center"
            android:padding="@dimen/magin_8"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size" />
    </android.support.v7.widget.CardView>
</LinearLayout>