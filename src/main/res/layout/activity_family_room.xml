                                    android:layout_height="wrap_content"
                                    android:text="BOSS"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/smallTextSize" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/mGuradLL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/magin_15"
                                android:layout_marginRight="@dimen/margin_10"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.qianyu.communicate.views.RoundImageView
                                    android:layout_width="@dimen/magin_30"
                                    android:layout_height="@dimen/magin_30"
                                    android:src="@drawable/guard" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="押镖"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/smallTextSize" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/mLuckPanLL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/magin_15"
                                android:layout_marginRight="@dimen/magin_8"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/magin_35"
                                    android:layout_height="@dimen/magin_35"
                                    android:src="@mipmap/turntable" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="转盘"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/smallTextSize" />
                            </LinearLayout>

                            <LinearLayout
