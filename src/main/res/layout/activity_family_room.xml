                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/smallTextSize" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/mXXL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/magin_15"
                                android:layout_marginRight="@dimen/magin_8"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="@dimen/magin_35"
                                    android:layout_height="@dimen/magin_35"
                                    android:src="@mipmap/icon_xiao" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="消消乐"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/smallTextSize" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/llay_redpackage"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/magin_15"
                                android:layout_marginRight="@dimen/magin_8"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/magin_35"
                                    android:layout_height="@dimen/magin_35"
                                    android:src="@mipmap/icon_kai" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="红包"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/smallTextSize" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mRideViewLL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right|bottom"
                            android:layout_marginBottom="@dimen/magin_50"
                            android:layout_marginRight="@dimen/magin_5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="@dimen/magin_150"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ridebg"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/mRideName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="王大锤"
                                    android:textColor="@color/chat_color_nv"
                                    android:textSize="@dimen/littleTextSize" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="驾驭"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/littleTextSize" />

                                <TextView
                                    android:id="@+id/mRideTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="闪电麒麟"
                                    android:textColor="@color/chat_color_nv"
                                    android:textSize="@dimen/littleTextSize" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="驾上线了！"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/littleTextSize" />
                            </LinearLayout>

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/mRideImageView"
                                android:layout_width="@dimen/magin_100"
                                android:layout_height="@dimen/magin_80"
                                android:layout_marginTop="@dimen/margin_10"
                                app:actualImageScaleType="focusCrop"
                                app:failureImage="@mipmap/fang_zhengtouxiang"
                                app:failureImageScaleType="centerCrop"
                                app:placeholderImage="@mipmap/fang_zhengtouxiang"
                                app:placeholderImageScaleType="centerCrop"
                                app:progressBarAutoRotateInterval="3000"
                                app:progressBarImage="@drawable/progressbar"
                                app:progressBarImageScaleType="centerInside" />
                            <!--app:roundAsCircle="true"-->
                            <!--app:roundedCornerRadius="@dimen/magin_3"-->
                            <!--app:fadeDuration="3000"-->
                            <!--app:roundingBorderColor="#C3B0A9"-->
                            <!--app:roundingBorderWidth="2dp" />-->
                        </LinearLayout>
                    </FrameLayout>

