<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/adapter_select"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_10"
        android:paddingLeft="@dimen/magin_20"
        android:paddingRight="@dimen/magin_20"
        android:paddingTop="@dimen/margin_10">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mHeadImg"
            android:layout_width="@dimen/magin_60"
            android:layout_height="@dimen/magin_60"
            app:actualImageScaleType="focusCrop"
            app:failureImage="@mipmap/huoqutupianmoshi"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="@mipmap/huoqutupianmoshi"
            app:placeholderImageScaleType="centerCrop"
            app:progressBarAutoRotateInterval="3000"
            app:progressBarImage="@drawable/progressbar"
            app:progressBarImageScaleType="centerInside"
            app:roundedCornerRadius="@dimen/magin_5" />
        <!--app:fadeDuration="3000"-->
        <!--app:roundAsCircle="true"-->
        <!--app:roundingBorderColor="#C3B0A9"-->
        <!--app:roundingBorderWidth="2dp" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mContentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/magin_2"
                android:maxLines="2"
                android:maxEms="11"
                android:text="谈谈我对《内劲一素文一阴阳应象大论》中帮人事以养五脏的理解"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middleTextSize" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/magin_5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/mGifLogo"
                        android:layout_width="@dimen/magin_15"
                        android:layout_height="@dimen/magin_15"
                        android:layout_gravity="center_vertical"
                        app:actualImageScaleType="focusCrop"
                        app:failureImage="@mipmap/huoqutupianmoshi"
                        app:failureImageScaleType="centerCrop"
                        app:placeholderImage="@mipmap/huoqutupianmoshi"
                        app:placeholderImageScaleType="centerCrop"
                        app:progressBarAutoRotateInterval="3000"
                        app:progressBarImage="@drawable/progressbar"
                        app:progressBarImageScaleType="centerInside" />
                    <!--app:roundedCornerRadius="5dp" />-->
                    <!--app:fadeDuration="3000"-->
                    <!--app:roundAsCircle="true"-->
                    <!--app:roundingBorderColor="#C3B0A9"-->
                    <!--app:roundingBorderWidth="2dp" />-->
                    <TextView
                        style="@style/style_text_style_pingfang_changgui"
                        android:id="@+id/mNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/magin_5"
                        android:layout_marginTop="@dimen/magin_1"
                        android:singleLine="true"
                        android:text="梅全喜"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/smallTextSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/magin_15"
                        android:layout_height="@dimen/magin_15"
                        android:src="@mipmap/leiji_erji"
                        android:visibility="gone" />

                    <TextView
                        style="@style/style_text_style_pingfang_changgui"
                        android:id="@+id/mNumTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/magin_2"
                        android:layout_marginRight="@dimen/magin_2"
                        android:layout_marginTop="@dimen/magin_3"
                        android:text="73.8万次播放"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/littleTextSize" />
                </LinearLayout>

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:id="@+id/mMoneyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/magin_2"
                    android:layout_marginTop="@dimen/magin_1"
                    android:gravity="center"
                    android:maxLength="8"
                    android:text="￥1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tightTextSize"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_0.1"
        android:background="@color/little_gray" />
</LinearLayout>