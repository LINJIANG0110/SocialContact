<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF3F5F9"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:paddingTop="@dimen/margin_10">

    <LinearLayout
        android:id="@+id/walletLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cornor_white"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/mMallImg"
            android:layout_width="@dimen/magin_30"
            android:layout_height="@dimen/magin_30"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@mipmap/diamond1" />


        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mMallName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_2"
            android:text="钻石x60"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize_" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mMallDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_2"
            android:layout_marginLeft="@dimen/magin_20"
            android:lines="3"
            android:layout_marginRight="@dimen/magin_20"
            android:gravity="center_horizontal"
            android:text="游戏基础货币"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/tightTextSize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mDiamondLogo"
                android:layout_width="@dimen/magin_15"
                android:layout_height="@dimen/magin_15"
                android:layout_marginRight="@dimen/magin_5"
                android:src="@mipmap/diamond1" />

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mMallMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥68.00"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/middleTextSize_" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/chosenLogo"
        android:layout_width="@dimen/magin_20"
        android:layout_height="@dimen/magin_20"
        android:layout_gravity="bottom|right"
        android:src="@mipmap/chongzhi_xuanze"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/mHotLogo"
        android:layout_width="@dimen/magin_20"
        android:layout_height="@dimen/magin_20"
        android:layout_gravity="top|right"
        android:layout_marginTop="-10dp"
        android:src="@mipmap/hotmall"
        android:visibility="visible" />
</FrameLayout>
