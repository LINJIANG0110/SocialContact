<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_view" />

    <com.qianyu.communicate.views.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_0.1"
                android:background="@color/little_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_color"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/magin_3"
                android:paddingLeft="@dimen/margin_10"
                android:visibility="gone"
                android:paddingRight="@dimen/margin_10"
                android:paddingTop="@dimen/magin_3">

                <ImageView
                    android:layout_width="@dimen/magin_15"
                    android:layout_height="@dimen/magin_15"
                    android:src="@mipmap/fensi_msg" />

                <com.qianyu.communicate.views.MarqueeView
                    android:id="@+id/mv_bar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/margin_10"
                    app:mvAnimDuration="1000"
                    app:mvInterval="3000"
                    app:mvTextColor="@color/white"
                    app:mvTextSize="@dimen/smallTextSize"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/impress_color"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/magin_40">

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:id="@+id/currentMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/hugeTextSize_" />

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本月当前收入(元)"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/smallTextSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/magin_15">

                    <TextView
                        style="@style/style_text_style_pingfang_changgui"
                        android:id="@+id/lastMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/largeTextSize" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/magin_5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_text_style_pingfang_changgui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上月已结算"
                            android:textColor="@color/text_gray_"
                            android:textSize="@dimen/middleTextSize" />

                        <ImageView
                            android:layout_width="@dimen/magin_12"
                            android:layout_height="@dimen/magin_12"
                            android:layout_marginLeft="@dimen/magin_5"
                            android:src="@mipmap/wo_jiantouyou" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/magin_15">

                    <TextView
                        style="@style/style_text_style_pingfang_changgui"
                        android:id="@+id/totalMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/largeTextSize" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/magin_5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_text_style_pingfang_changgui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计已结算"
                            android:textColor="@color/text_gray_"
                            android:textSize="@dimen/middleTextSize" />

                        <ImageView
                            android:layout_width="@dimen/magin_12"
                            android:layout_height="@dimen/magin_12"
                            android:layout_marginLeft="@dimen/magin_5"
                            android:src="@mipmap/wo_jiantouyou" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_0.1"
                android:background="@color/little_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/magin_15">

                    <TextView
                        style="@style/style_text_style_pingfang_changgui"
                        android:id="@+id/canWithDraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/largeTextSize" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/magin_5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_text_style_pingfang_changgui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可提现余额"
                            android:textColor="@color/text_gray_"
                            android:textSize="@dimen/middleTextSize" />

                        <ImageView
                            android:layout_width="@dimen/magin_12"
                            android:layout_height="@dimen/magin_12"
                            android:layout_marginLeft="@dimen/magin_5"
                            android:src="@mipmap/wo_jiantouyou" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/magin_20"
                    android:paddingTop="@dimen/magin_15">

                    <TextView
                        style="@style/style_text_style_pingfang_changgui"
                        android:id="@+id/exChangeSleeve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/shape_solid_little_gray_"
                        android:paddingBottom="@dimen/magin_3"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:paddingTop="@dimen/magin_3"
                        android:text="换葫芦"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/middleTextSize" />

                    <TextView
                        style="@style/style_text_style_pingfang_changgui"
                        android:id="@+id/goWithDraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/magin_5"
                        android:background="@drawable/app_color_selector"
                        android:paddingBottom="@dimen/magin_3"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:paddingTop="@dimen/magin_3"
                        android:text="去提现"
                        android:textColor="@color/white"
                        android:textSize="@dimen/middleTextSize" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_5"
                android:background="@color/chat_room_bg_" />

            <RelativeLayout
                android:id="@+id/exChangeMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/adapter_select"
                android:paddingTop="@dimen/margin_10"
                android:visibility="gone"
                android:paddingRight="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:paddingLeft="@dimen/magin_6"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/magin_25"
                        android:layout_height="@dimen/magin_25"
                        android:src="@mipmap/shouyi_huluduixian" />

                    <TextView
                        style="@style/style_text_style_pingfang_changgui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:text="@string/exchangeMoney"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/middleTextSize" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/magin_20"
                    android:layout_height="@dimen/magin_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_0.1"
                android:background="@color/little_gray" />

            <RelativeLayout
                android:id="@+id/incomeDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/adapter_select"
                android:padding="@dimen/margin_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/magin_20"
                        android:layout_height="@dimen/magin_20"
                        android:src="@mipmap/shouyi_shouzhimingxi" />

                    <TextView
                        style="@style/style_text_style_pingfang_changgui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:text="@string/incomeDetail"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/middleTextSize" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/magin_20"
                    android:layout_height="@dimen/magin_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_0.1"
                android:background="@color/little_gray" />

            <RelativeLayout
                android:id="@+id/withDrawMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/adapter_select"
                android:padding="@dimen/margin_10">

                <LinearLayout
                    android:id="@+id/mTitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/magin_20"
                        android:layout_height="@dimen/magin_20"
                        android:src="@mipmap/shouyi_zhanghutixian" />

                    <TextView
                        style="@style/style_text_style_pingfang_changgui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:text="@string/withDraw"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/middleTextSize" />
                </LinearLayout>

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:text="需要先绑定账号，才能提现"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/smallTextSize" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_0.1"
                android:background="@color/little_gray" />
        </LinearLayout>
    </com.qianyu.communicate.views.BounceScrollView>
</LinearLayout>