<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_ll"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="#ffffff">

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/confirm_tv"
            android:layout_toRightOf="@+id/cancel_tv"
            android:gravity="center"
            android:singleLine="true"
            android:text="选择性别"
            android:textColor="#666"
            android:textSize="12sp" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/confirm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="#646464"
            android:textSize="15sp" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="#646464"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/magin_40">

        <FrameLayout
            android:id="@+id/manSexFL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/magin_60"
                    android:layout_height="@dimen/magin_60"
                    android:layout_gravity="center"
                    android:src="@mipmap/wxdl_nan" />

                <ImageView
                    android:id="@+id/manChoseLogo"
                    android:layout_width="@dimen/magin_12"
                    android:layout_height="@dimen/magin_12"
                    android:layout_gravity="right|bottom"
                    android:src="@mipmap/wxdl_xuanze" />
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/womanSexFL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/magin_60"
                    android:layout_height="@dimen/magin_60"
                    android:layout_gravity="center"
                    android:src="@mipmap/wxdl_nv" />

                <ImageView
                    android:id="@+id/womanChoseLogo"
                    android:layout_width="@dimen/magin_12"
                    android:layout_height="@dimen/magin_12"
                    android:visibility="gone"
                    android:layout_gravity="right|bottom"
                    android:src="@mipmap/wxdl_xuanze" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout><!-- From: file:/D:/git/city_picker/lib/src/main/res/layout/pic_layout.xml -->