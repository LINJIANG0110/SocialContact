<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/magin_20"
        android:layout_marginLeft="@dimen/magin_15"
        android:layout_marginRight="@dimen/magin_15"
        android:layout_marginTop="@dimen/margin_10"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/little_gray"
                android:orientation="horizontal"
                android:padding="@dimen/magin_15">

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="单笔充值金额"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/smallTextSize" />

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="升级概率加成"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/smallTextSize" />

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="有效时间"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/smallTextSize" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecylerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/magin_20"
                android:text="与排名加成不叠加"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/smallTextSize" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>