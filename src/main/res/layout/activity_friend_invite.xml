<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_head_view" />

    <LinearLayout
        android:id="@+id/mSearchFriendLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/magin_40"
            android:layout_height="@dimen/magin_40"
            android:src="@mipmap/search" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:text="搜索好友"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />

        <ImageView
            android:layout_width="@dimen/magin_12"
            android:layout_height="@dimen/magin_12"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@mipmap/wo_jiantouyou" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_5"
        android:background="@color/little_gray" />

    <LinearLayout
        android:id="@+id/mPhoneFriendLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/magin_40"
            android:layout_height="@dimen/magin_40"
            android:src="@mipmap/phone" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:text="手机好友"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />

        <ImageView
            android:layout_width="@dimen/magin_12"
            android:layout_height="@dimen/magin_12"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@mipmap/wo_jiantouyou" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_1"
        android:background="@color/little_gray" />

    <LinearLayout
        android:id="@+id/mWxFriendLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/magin_40"
            android:layout_height="@dimen/magin_40"
            android:src="@mipmap/tixian_weixin" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:text="微信好友"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />

        <ImageView
            android:layout_width="@dimen/magin_12"
            android:layout_height="@dimen/magin_12"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@mipmap/wo_jiantouyou" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_1"
        android:background="@color/little_gray" />

    <LinearLayout
        android:id="@+id/mQQFriendLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/magin_40"
            android:layout_height="@dimen/magin_40"
            android:src="@mipmap/qq" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:text="QQ好友"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />

        <ImageView
            android:layout_width="@dimen/magin_12"
            android:layout_height="@dimen/magin_12"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@mipmap/wo_jiantouyou" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_5"
        android:background="@color/little_gray" />

    <LinearLayout
        android:id="@+id/mAppFriendLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/magin_40"
            android:layout_height="@dimen/magin_40"
            android:src="@mipmap/logo" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:text="千语好友"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />

        <ImageView
            android:layout_width="@dimen/magin_12"
            android:layout_height="@dimen/magin_12"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@mipmap/wo_jiantouyou" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_5"
        android:background="@color/little_gray" />

    <LinearLayout
        android:id="@+id/mLocalFriendLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/magin_40"
            android:layout_height="@dimen/magin_40"
            android:src="@mipmap/local" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:text="附近的人"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />

        <ImageView
            android:layout_width="@dimen/magin_12"
            android:layout_height="@dimen/magin_12"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@mipmap/wo_jiantouyou" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_5"
        android:background="@color/little_gray" />
</LinearLayout>