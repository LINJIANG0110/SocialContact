<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        >

        <LinearLayout
            android:id="@+id/mTimeLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/magin_5"
                android:text="@string/thisWeek"
                android:textColor="@color/app_color"
                android:textSize="@dimen/middleTextSize" />

            <ImageView
                android:layout_width="@dimen/magin_15"
                android:layout_height="@dimen/magin_15"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mLL2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/magin_20"
            android:padding="@dimen/magin_5"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mHeadImg2"
                    android:layout_width="@dimen/magin_60"
                    android:layout_height="@dimen/magin_60"
                    app:actualImageScaleType="focusCrop"
                    app:failureImage="@mipmap/wxdl_chushi"
                    app:failureImageScaleType="centerCrop"
                    app:placeholderImage="@mipmap/wxdl_chushi"
                    app:placeholderImageScaleType="centerCrop"
                    app:progressBarAutoRotateInterval="3000"
                    app:progressBarImage="@drawable/progressbar"
                    app:progressBarImageScaleType="centerInside"
                    app:roundAsCircle="true"
                    app:roundedCornerRadius="@dimen/magin_5" />
                <!--app:fadeDuration="3000"-->
                <!--app:roundingBorderColor="#C3B0A9"-->
                <!--app:roundingBorderWidth="2dp" />-->
            </FrameLayout>

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/magin_5"
                android:text="大叔的小船"
                android:textColor="@color/app_color"
                android:textSize="@dimen/middleTextSize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/magin_20"
                android:src="@mipmap/rich_rank_logo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLL1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/magin_5"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mHeadImg1"
                    android:layout_width="@dimen/magin_80"
                    android:layout_height="@dimen/magin_80"
                    app:actualImageScaleType="focusCrop"
                    app:failureImage="@mipmap/wxdl_chushi"
                    app:failureImageScaleType="centerCrop"
                    app:placeholderImage="@mipmap/wxdl_chushi"
                    app:placeholderImageScaleType="centerCrop"
                    app:progressBarAutoRotateInterval="3000"
                    app:progressBarImage="@drawable/progressbar"
                    app:progressBarImageScaleType="centerInside"
                    app:roundAsCircle="true"
                    app:roundedCornerRadius="@dimen/magin_5" />
                <!--app:fadeDuration="3000"-->
                <!--app:roundingBorderColor="#C3B0A9"-->
                <!--app:roundingBorderWidth="2dp" />-->
            </FrameLayout>

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/magin_5"
                android:text="大叔的小船"
                android:textColor="@color/app_color"
                android:textSize="@dimen/middleTextSize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/magin_20"
                android:src="@mipmap/rich_rank_logo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLL3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/magin_20"
            android:padding="@dimen/magin_5"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mHeadImg3"
                    android:layout_width="@dimen/magin_60"
                    android:layout_height="@dimen/magin_60"
                    app:actualImageScaleType="focusCrop"
                    app:failureImage="@mipmap/wxdl_chushi"
                    app:failureImageScaleType="centerCrop"
                    app:placeholderImage="@mipmap/wxdl_chushi"
                    app:placeholderImageScaleType="centerCrop"
                    app:progressBarAutoRotateInterval="3000"
                    app:progressBarImage="@drawable/progressbar"
                    app:progressBarImageScaleType="centerInside"
                    app:roundAsCircle="true"
                    app:roundedCornerRadius="@dimen/magin_5" />
                <!--app:fadeDuration="3000"-->
                <!--app:roundingBorderColor="#C3B0A9"-->
                <!--app:roundingBorderWidth="2dp" />-->
            </FrameLayout>

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/magin_5"
                android:text="大叔的小船"
                android:textColor="@color/app_color"
                android:textSize="@dimen/middleTextSize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/magin_20"
                android:src="@mipmap/rich_rank_logo" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_1"
        android:layout_marginTop="@dimen/magin_5"
        android:background="@color/little_gray" />
</LinearLayout>