<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="bottom"
    android:paddingTop="@dimen/magin_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_half_cornor_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/magin_15"
        android:paddingRight="@dimen/magin_15"
        android:paddingTop="@dimen/magin_15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/magin_5"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/magin_50"
                android:layout_height="1dp"
                android:background="@color/little_gray" />

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:text="付费入场"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/smallTextSize" />

            <View
                android:layout_width="@dimen/magin_50"
                android:layout_height="1dp"
                android:background="@color/little_gray" />
        </LinearLayout>

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mMoneyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥99.00"
            android:textSize="@dimen/hugeTextSize"
            android:layout_marginTop="@dimen/magin_20"
            android:layout_marginBottom="@dimen/magin_20"
            android:textColor="@color/colorRed"/>

        <android.support.v7.widget.CardView
            android:id="@+id/payCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/margin_10"
            android:descendantFocusability="blocksDescendants"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/magin_8"
                android:background="@drawable/app_color_selector"
                android:gravity="center"
                android:text="购买进入"
                android:textColor="@color/white"
                android:textSize="@dimen/middleTextSize" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>