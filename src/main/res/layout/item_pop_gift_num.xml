<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mGiftLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/magin_6"
        android:paddingBottom="@dimen/magin_6"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/magin_5"
        >

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mGiftNum"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textColor="@color/vip_bg"
            android:textSize="@dimen/smallTextSize" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mGiftContent"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_5"
            android:gravity="left"
            android:text="天长地久"
            android:textColor="@color/white"
            android:textSize="@dimen/smallTextSize" />

    </LinearLayout>
    <!--</LinearLayout>-->

    <View
        android:id="@+id/mLineView"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_pressed" />
</LinearLayout>

