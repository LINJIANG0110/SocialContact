<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/mBackFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/magin_15">

            <ImageView
                android:layout_width="@dimen/magin_15"
                android:layout_height="@dimen/magin_15"
                android:src="@drawable/all_back" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/mShareFL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_10"
                android:paddingLeft="@dimen/magin_15"
                android:paddingRight="@dimen/margin_10"
                android:paddingTop="@dimen/margin_10"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/magin_20"
                    android:layout_height="@dimen/magin_18"
                    android:src="@mipmap/liaotianshi_fenxiang" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/mMoreFL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/magin_15"
                android:paddingTop="@dimen/margin_10"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/magin_25"
                    android:layout_height="@dimen/magin_5"
                    android:background="@mipmap/xiangqing_shezhi" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.qianyu.communicate.views.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="@dimen/magin_100"
                android:layout_height="@dimen/magin_100"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mHeadImg"
                    android:layout_width="@dimen/magin_100"
                    android:layout_height="@dimen/magin_100"
                    app:actualImageScaleType="focusCrop"
                    app:failureImage="@mipmap/huoqutupianmoshi"
                    app:failureImageScaleType="centerCrop"
                    app:placeholderImage="@mipmap/huoqutupianmoshi"
                    app:placeholderImageScaleType="centerCrop"
                    app:progressBarAutoRotateInterval="3000"
                    app:progressBarImage="@drawable/progressbar"
                    app:progressBarImageScaleType="centerInside" />
                <!--app:roundingBorderWidth="2dp"-->
                <!--app:roundingBorderColor="#C3B0A9"-->
                <!--app:roundedCornerRadius="@dimen/magin_5"-->
                <!--app:fadeDuration="3000"-->
                <!--app:roundAsCircle="true"-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/magin_20"
                    android:layout_gravity="bottom"
                    android:background="@drawable/heitoumingjianbian">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/magin_15"
                            android:layout_height="@dimen/magin_15"
                            android:src="@mipmap/leiji_erji" />

                        <TextView
                            style="@style/style_text_style_pingfang_changgui"
                            android:id="@+id/mNumTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/magin_5"
                            android:layout_marginRight="@dimen/magin_5"
                            android:text="143.6万"
                            android:textColor="@color/white"
                            android:textSize="@dimen/smallTextSize" />
                    </LinearLayout>

                </FrameLayout>

            </android.support.v7.widget.CardView>


            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/magin_20"
                android:layout_marginLeft="@dimen/magin_50"
                android:layout_marginRight="@dimen/magin_50"
                android:layout_marginTop="@dimen/magin_20"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/magin_5"
                android:text="谭雅娣：打脸方舟子，西医博士来告诉你中医到底可不科学！"
                android:textColor="@color/black"
                android:textSize="@dimen/middleTextSize2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_5"
                android:background="#e1f3f4f8" />

            <LinearLayout
                android:id="@+id/mStartLiveLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/magin_15"
                    android:paddingLeft="@dimen/magin_20"
                    android:paddingTop="@dimen/magin_15">

                    <ImageView
                        android:layout_width="@dimen/magin_20"
                        android:layout_height="@dimen/magin_16"
                        android:src="@mipmap/wo_liulanlishi" />

                    <TextView
                        style="@style/style_text_style_pingfang_changgui"
                        android:id="@+id/mTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:text="2018-9-11 下午4:23 开播"
                        android:textColor="@color/black"
                        android:textSize="@dimen/smallTextSize_" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/magin_5"
                    android:background="#e1f3f4f8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/magin_15"
                android:paddingTop="@dimen/magin_15">

                <View
                    android:layout_width="@dimen/magin_50"
                    android:layout_height="@dimen/magin_1"
                    android:background="@color/line_color" />

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/magin_20"
                    android:layout_marginRight="@dimen/magin_20"
                    android:text="主讲人"
                    android:textColor="@color/black"
                    android:textSize="@dimen/middleTextSize" />

                <View
                    android:layout_width="@dimen/magin_50"
                    android:layout_height="@dimen/magin_1"
                    android:background="@color/line_color" />
            </LinearLayout>

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_20"
                android:layout_marginRight="@dimen/magin_20"
                android:text="王芳华    北京中医院"
                android:textColor="@color/black"
                android:textSize="@dimen/middleTextSize" />

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mGoodAtTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/magin_20"
                android:layout_marginLeft="@dimen/magin_20"
                android:layout_marginRight="@dimen/magin_20"
                android:layout_marginTop="@dimen/magin_5"
                android:lineSpacingExtra="@dimen/magin_5"
                android:text="擅长中医妇科疑难病，尤其擅长月经不调、功能性子宫出血、闭经，痛经、围绝经期综合征、子宫内膜异症、慢性盆腔炎、多浪卵巢综合征及不孕等方面的诊治。多浪卵巢综合征及不孕等方面的诊治。"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middleTextSize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_5"
                android:background="#e1f3f4f8" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/magin_15"
                android:paddingTop="@dimen/magin_15">

                <View
                    android:layout_width="@dimen/magin_50"
                    android:layout_height="@dimen/magin_1"
                    android:background="@color/line_color" />

                <TextView
                    style="@style/style_text_style_pingfang_changgui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/magin_20"
                    android:layout_marginRight="@dimen/magin_20"
                    android:text="主题概要"
                    android:textColor="@color/black"
                    android:textSize="@dimen/middleTextSize" />

                <View
                    android:layout_width="@dimen/magin_50"
                    android:layout_height="@dimen/magin_1"
                    android:background="@color/line_color" />
            </LinearLayout>

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mSubjectTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/magin_20"
                android:layout_marginLeft="@dimen/magin_20"
                android:layout_marginRight="@dimen/magin_20"
                android:lineSpacingExtra="@dimen/magin_5"
                android:text="擅长中医妇科疑难病，尤其擅长月经不调、功能性子宫出血、闭经，痛经、围绝经期综合征、子宫内膜异症、慢性盆腔炎、多浪卵巢综合征及不孕等方面的诊治。多浪卵巢综合征及不孕等方面的诊治。"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middleTextSize" />
        </LinearLayout>
    </com.qianyu.communicate.views.BounceScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_1"
        android:background="@color/little_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mCollectLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/magin_8"
            android:paddingLeft="@dimen/magin_20"
            android:paddingRight="@dimen/magin_20"
            android:paddingTop="@dimen/magin_8">

            <ImageView
                android:id="@+id/mCollectImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/collect_yes" />

            <TextView
                style="@style/style_text_style_pingfang_changgui"
                android:id="@+id/mCollectTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_5"
                android:text="收藏"
                android:textColor="@color/btn_red"
                android:textSize="@dimen/middleTextSize" />
        </LinearLayout>

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/mEnterTv"
            android:layout_width="0dp"
            android:layout_height="@dimen/magin_40"
            android:layout_weight="1"
            android:background="@drawable/anniu_fufei"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="免费进入"
            android:textColor="@color/white"
            android:textSize="@dimen/middleTextSize" />
    </LinearLayout>
</LinearLayout>