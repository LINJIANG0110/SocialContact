<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_10"
    android:background="@color/white"
    android:paddingLeft="@dimen/magin_20"
    android:id="@+id/mRootLL"
    android:paddingRight="@dimen/magin_20"
    android:paddingTop="@dimen/margin_10">

    <TextView
        style="@style/style_text_style_pingfang_changgui"
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cornor_app_corlor"
        android:paddingBottom="@dimen/magin_1"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/magin_1"
        android:gravity="center"
        android:text="制造"
        android:textColor="@color/white"
        android:textSize="@dimen/smallTextSize" />

    <TextView
        style="@style/style_text_style_pingfang_changgui"
        android:id="@+id/contentTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_weight="1"
        android:text="计算机/互联网/通信"
        android:textColor="@color/text_black"
        android:textSize="@dimen/middleTextSize" />

    <ImageView
        android:id="@+id/chosenLogo"
        android:layout_width="@dimen/magin_15"
        android:layout_height="@dimen/magin_15"
        android:src="@mipmap/hangye_duigou" />
</LinearLayout>
