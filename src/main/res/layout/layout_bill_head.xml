<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/magin_15">

        <ImageView
            android:id="@+id/mTotalLogo"
            android:layout_width="@dimen/magin_20"
            android:layout_height="@dimen/magin_25"
            android:src="@mipmap/wallet1" />

        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/totalIncomeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="余额"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />


        <TextView
            style="@style/style_text_style_pingfang_changgui"
            android:id="@+id/totalIncomeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="0"
            android:textColor="@color/text_black"
            android:textSize="@dimen/middleTextSize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_0.1"
        android:background="@color/little_gray" />
</LinearLayout>
